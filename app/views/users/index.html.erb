<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'users/usershow', user: @user %>
     <%= render 'books/newform', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3>Users</h3>

      <table class="table table-striped">
        <thead>
          <tr>
           <th>image</th>
           <th>name</th>
           <th></th>
          </tr>
        </thead>

          <tbody>
           <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
           <% end %>

          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= paginate @users %>